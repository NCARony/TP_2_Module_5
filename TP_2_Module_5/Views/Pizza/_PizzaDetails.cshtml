@model TP_2_Module_5.Pizza

<h4>Pizza</h4>
<hr />
<dl class="dl-horizontal">
    <dt>
        <h2> @Html.DisplayNameFor(model => model.Nom) </h2>
    </dt>

    <dd>
        <h2>@Html.DisplayFor(model => model.Nom)</h2>
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Pate)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Pate.Nom)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Ingredients)
    </dt>

    @foreach (var ingredient in Model.Ingredients)
    {
        <dd>
            @Html.DisplayFor(modelItem => ingredient.Nom)
        </dd>
    }

</dl>  

